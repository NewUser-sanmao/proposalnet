<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.proposal.dao.ZcblDao">

	<select id="get" resultType="com.bootdo.proposal.domain.ZcblDO">
		select `id`,`createId`,`createTime`,`updateId`,`updateTime`,`state`,`taxxId`,`cs` from proposal_zcbl where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.proposal.domain.ZcblDO">
		select `id`,`createId`,`createTime`,`updateId`,`updateTime`,`state`,`taxxId`,`cs` from proposal_zcbl
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="createid != null and createid != ''"> and createId = #{createid} </if>
		  		  <if test="createtime != null and createtime != ''"> and createTime = #{createtime} </if>
		  		  <if test="updateid != null and updateid != ''"> and updateId = #{updateid} </if>
		  		  <if test="updatetime != null and updatetime != ''"> and updateTime = #{updatetime} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		  <if test="taxxid != null and taxxid != ''"> and taxxId = #{taxxid} </if>
		  		  <if test="cs != null and cs != ''"> and cs = #{cs} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from proposal_zcbl
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="createid != null and createid != ''"> and createId = #{createid} </if>
		  		  <if test="createtime != null and createtime != ''"> and createTime = #{createtime} </if>
		  		  <if test="updateid != null and updateid != ''"> and updateId = #{updateid} </if>
		  		  <if test="updatetime != null and updatetime != ''"> and updateTime = #{updatetime} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		  <if test="taxxid != null and taxxid != ''"> and taxxId = #{taxxid} </if>
		  		  <if test="cs != null and cs != ''"> and cs = #{cs} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.proposal.domain.ZcblDO" useGeneratedKeys="true" keyProperty="id">
		insert into proposal_zcbl
		(
			`createId`, 
			`createTime`, 
			`updateId`, 
			`updateTime`, 
			`state`, 
			`taxxId`, 
			`cs`
		)
		values
		(
			#{createid}, 
			#{createtime}, 
			#{updateid}, 
			#{updatetime}, 
			#{state}, 
			#{taxxid}, 
			#{cs}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.proposal.domain.ZcblDO">
		update proposal_zcbl 
		<set>
			<if test="createid != null">`createId` = #{createid}, </if>
			<if test="createtime != null">`createTime` = #{createtime}, </if>
			<if test="updateid != null">`updateId` = #{updateid}, </if>
			<if test="updatetime != null">`updateTime` = #{updatetime}, </if>
			<if test="state != null">`state` = #{state}, </if>
			<if test="taxxid != null">`taxxId` = #{taxxid}, </if>
			<if test="cs != null">`cs` = #{cs}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from proposal_zcbl where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from proposal_zcbl where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>